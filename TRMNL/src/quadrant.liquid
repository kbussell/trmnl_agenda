<div class="layout">
  <table class="table">
    <tbody>
    {% for row in days limit:days_half %}
      <tr class="h--10"{% if row.skip %} style="border-top: 2px solid;"{% endif %}>
        <td class="w--20"><span class="value value--xxsmall">{{ row.d }}</span></td>
        {% if row.w %}
          <td class="w--12">
            <div class="icon {{ row.w.img }}"></div>
          </td>
          <td class="w--20">
            <p>
              {{ row.w.h }} / {{ row.w.l }}
            </p>
            {% if row.w.snow %}
              <div>
                <div class="icon-mini snowflake-16"></div> {{ row.w.snow }}
              </div>
              {% elsif row.w.rain %}
              <div>
                <div class="icon-mini raindrop-16"></div> {{ row.w.rain }}
              </div>
            {% endif %}
          </td>
        {% else %}
          <td></td>
          <td></td>
        {% endif %}
        <td>
          {% if row.e %}
            <ul style="list-style: none;">
              {% for cal in row.e limit:2 %}
                <li><span class="clamp--1">{{ cal[0] }} {{ cal[1] }}</span></li>
              {% endfor %}
              {% if row.x1 %}
                <li>{{ row.x1 }}</li>
              {% endif %}
            </ul>
          {% endif %}
        </td>
      </tr>
    {% endfor %}
    </tbody>
  </table>
</div>
